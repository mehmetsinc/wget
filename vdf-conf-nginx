server {
    listen 80;
    listen [::]:80;
    server_name tt-electra.ngncloud.com.tr;

    client_max_body_size 0;
    root /var/www/html;
    index index.html index.htm;

    location / {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        index index.html;
        try_files $uri $uri/ =404;
        
        # WebDAV ayarlarÄ± ekleniyor:
        dav_methods PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods PROPFIND OPTIONS;
        create_full_put_path on;
        dav_access user:rw group:rw all:r;
        client_body_temp_path /tmp/nginx_client_body;
    }

    location /download/ {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        try_files $uri $uri/ =404;
        
        dav_methods PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods PROPFIND OPTIONS;
        create_full_put_path on;
        dav_access user:rw group:rw all:r;
        client_body_temp_path /tmp/nginx_client_body;
    }

    location /kepler01/ {
        alias /home/vodafone-sftp/sftp/msincwwwcopy/html/kepler01/;
        index index.html;
        autoindex off;
        
        dav_methods PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods PROPFIND OPTIONS;
        create_full_put_path on;
        dav_access user:rw group:rw all:r;
        client_body_temp_path /tmp/nginx_client_body;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name tt-electra.ngncloud.com.tr;

    client_max_body_size 0;
    ssl_certificate     /etc/nginx/ssl/ngncloudwildcardfullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/ngncloudwildcardkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    root /var/www/html;
    index index.html index.htm;

    location / {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        index index.html;
        try_files $uri $uri/ =404;
        
        dav_methods PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods PROPFIND OPTIONS;
        create_full_put_path on;
        dav_access user:rw group:rw all:r;
        client_body_temp_path /tmp/nginx_client_body;
    }

    location /download/ {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        try_files $uri $uri/ =404;
        
        dav_methods PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods PROPFIND OPTIONS;
        create_full_put_path on;
        dav_access user:rw group:rw all:r;
        client_body_temp_path /tmp/nginx_client_body;
    }

    location /kepler01/ {
        alias /home/vodafone-sftp/sftp/msincwwwcopy/html/kepler01/;
        index index.html;
        autoindex on;
        
        dav_methods PUT DELETE MKCOL COPY MOVE;
        dav_ext_methods PROPFIND OPTIONS;
        create_full_put_path on;
        dav_access user:rw group:rw all:r;
        client_body_temp_path /tmp/nginx_client_body;
    }
}
