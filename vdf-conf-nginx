server {
    listen 80;
    listen [::]:80;
    server_name tt-electra.ngncloud.com.tr;

    root /var/www/html;
    index index.html index.htm;

    location / {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        index index.html;
        try_files $uri $uri/ =404;
    }

    location /download/ {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        try_files $uri $uri/ =404;
    }

    location /kepler01/ {
        alias /home/vodafone-sftp/sftp/msincuwcopy/html/kepler01/;
        index index.html;
        autoindex off;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name tt-electra.ngncloud.com.tr;

    ssl_certificate     /etc/nginx/ssl/star-ngncloud.crt;
    ssl_certificate_key /etc/nginx/ssl/star-ngncloud.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    root /var/www/html;
    index index.html index.htm;

    location / {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        index index.html;
        try_files $uri $uri/ =404;
    }

    location /download/ {
        alias /home/vodafone-sftp/sftp/;
        autoindex on;
        try_files $uri $uri/ =404;
    }

    location /kepler01/ {
        alias /home/vodafone-sftp/sftp/msincuwcopy/html/kepler01/;
        index index.html;
        autoindex off;
    }
}
